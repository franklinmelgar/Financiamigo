<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tarjeta"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="center"
    app:cardCornerRadius="25dp"
    android:layout_margin="15dp"
    android:elevation="10dp"
    android:theme="@style/Theme.Financiamigo"
    app:cardElevation="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/icono"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/item_circle_blue"
                android:padding="15dp"
                android:src="@drawable/ic_walet"></ImageView>

            <TextView
                android:id="@+id/NombreCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/icono"
                android:layout_marginTop="30dp"
                android:text="Prueba"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/DescripcionCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/icono"
                android:layout_marginTop="55dp"
                android:text="Descripcion"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18dp"
                ></TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_forward"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:layout_marginRight="15dp"
                ></ImageView>

        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Saldo:"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:textSize="30dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="1500"></TextView>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>