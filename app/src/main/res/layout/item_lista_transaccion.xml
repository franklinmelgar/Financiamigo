<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="@color/text_color"
    android:theme="@style/Theme.Financiamigo"
    >

    <TextView
        android:id="@+id/dia"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:text="15"
        android:textSize="45dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        ></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Prueba de mensaje"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            ></TextView>

        <TextView
            android:id="@+id/transacciones"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/descripcion"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="Transacciones: 1"
            android:textColor="@color/blue_grey"
            android:padding="1dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="15dp"
            ></TextView>

        <TextView
            android:id="@+id/montoIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="1500000"
            android:textColor="@color/green"
            android:padding="1dp"
            android:gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            ></TextView>

        <TextView
            android:id="@+id/montoGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/montoIngreso"
            android:text="1500000"
            android:textColor="@color/red"
            android:padding="1dp"
            android:gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            ></TextView>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_forward"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        ></ImageView>

</LinearLayout>